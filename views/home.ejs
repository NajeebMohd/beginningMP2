
<h1>in the home page</h1>

<section id = "feed-posts">
    <h4>Posts</h4>
    <% if(locals.user){ %>
        <form action="/posts/post-create" id = "new-feed-post" method="POST">
            <textarea name= "content" cols="30" rows="3"></textarea>
            <input type="submit" value="POST">
    
        </form>
    <% } %>
    

    <div id = "posts-list">
        <ul>
            <% for(post of posts){ %>
            
                <li>
                    <p>
                        <b><%= post.user.username %></b>
                        <br>
                        <%= post.content %>

                    </p>
                    <div class = "post-comment">
                        <% if(locals.user){ %>
                            <form action = "/comment/create-comment" method = "POST">
                                <input type="text" name = "content" placeholder="type the comment..."></input>
                                <input type="hidden" name= "post" value= "<%= post._id %>">
                                <input type = "submit" value="Add comment">
                            </form>
                        <% } %>
                        
                    </div>
                    
                </li>
                
            <% }%>
        </ul>
    </div>
</section>