<link rel="stylesheet" href="/css/home.css">

<div id = "home-container">
    <section id = "feed-posts" style="height: auto;">
        <h2>Posts</h2>
        <% if(locals.user){ %>
            <form action="/posts/post-create" id = "new-feed-post" method="POST">
                <textarea name= "content" cols="30" rows="3" required></textarea>
                <input type="submit" value="POST">
        
            </form>
        <% } %>
        
    
        <div id = "posts-list">
            <ul>
                <% for(post of posts){ %>
                
                    <%- include('_post') -%>
                    
                <% }%>
            </ul>
        </div>
    </section>
    
    <section id = "user-friends">
        <h3>Friends</h3>
        <ul>
            <% for(u of all_users){ %>
                <li>
                    <a href = "/profile/<%= u._id %>" > <%= u.username %> </a>
                </li>
            <% } %>
        </ul>
    </section>
</div>